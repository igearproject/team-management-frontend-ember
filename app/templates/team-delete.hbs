{{page-title "Delete Team"}}
<div>
  <Title @title="Delete Team">
    <LinkTo @route="team" class="btn btn-secondary">cancel</LinkTo>
  </Title>
  <div class="row">
    <div class="col-md-12">
      {{#if @isLoading}}
        <Loader/>
      {{else}}
        {{!-- {{#if (eq this.message.status 'danger')}} --}}
        <Message @message={{this.message}}/>
        {{#if this.model.id}}
          <DeleteTeam @team={{this.model}} @transition={{this.transitionFromComponent}}/>
        {{/if}}
      {{/if}}
    </div>
  </div>

</div>