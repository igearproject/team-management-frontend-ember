<div class="border rounded-2 p-2">
<div class="align-items-center d-flex flex-row justify-content-between mb-2">
  <div>
    <h3>{{@team.name}}</h3>
    <p>{{@team.description}}</p>
  </div>
{{yield}}
</div>
<div class="d-flex flex-column">
  {{#if (gt @team.members.length 0)}}
      <button class="btn btn-light" type="button" data-bs-toggle="collapse" href="#collapse-members" aria-expanded="false" aria-controls="collapse-members">
        show members
      </button>
      <ul class="list-group collapse mt-1" id="collapse-members">
        {{#each @team.members as |member|}}
          <li class="list-group-item">{{member.name}}</li>
        {{/each}}
      </ul>
    {{/if}}
</div>
</div>