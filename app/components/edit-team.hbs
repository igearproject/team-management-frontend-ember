<form {{on "submit" this.editTeam}}>
  
  <Message @message={{this.message}}/>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" id="name" value={{this.name}} {{on "input" this.setName}} placeholder="type name ...">
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <input type="text" class="form-control" id="description" value={{this.description}} {{on "input" this.setDescription}} placeholder="type description ...">
  </div>
  <button type="submit" class="btn btn-primary" disabled={{@isLoading}}>Save Edit Team</button>
</form>